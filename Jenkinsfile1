pipeline
{
	agent
	{
		label 'docker-agent-test'
	}
	environment
	{
		appUser = "test"
		appName = "python-docker-test"
		appVersion = "0.0.1"
		buildScript = "python3 hello.py"
		deployScript = 'echo "Deploying..."'
		logScript = 'python3 --version'
	}
	stages {
        stage('Build') {
            steps {
                script {
                    docker.image('python:3.10-alpine').inside {
                        sh "${logScript}" 
                        sh 'echo "doing build stuff.."'
                    }
                }
            }
        }
    }
}
